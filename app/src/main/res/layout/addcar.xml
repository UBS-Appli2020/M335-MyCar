<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/start_sc_blue"

    tools:context=".AddCar">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/upload_picture_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bild Hochladen" />

        <TextView
            android:id="@+id/label_modell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modell" />

        <EditText
            android:id="@+id/textinput_modell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/label_baujahr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baujahr" />

        <EditText
            android:id="@+id/textinput_baujahr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/label_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PS" />

        <EditText
            android:id="@+id/textinput_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/label_fznumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fahrzeugnummer" />

        <EditText
            android:id="@+id/textinput_fznumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/label_getriebeart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Getriebeart" />

        <Spinner
            android:id="@+id/textinput_getriebeart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_aufbauart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aufbauart" />

        <Spinner
            android:id="@+id/textinput_aufbauart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_treibstoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treibstoff" />

        <Spinner
            android:id="@+id/textinput_treibstoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/fehlermeldung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/add_car_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HinzufÃ¼gen" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:layout_marginStart="167dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>